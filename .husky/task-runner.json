{
    "tasks": [
        {
            "name": "fantomas-format-staged-files",
            "group": "pre-commit",
            "command": "dotnet",
            "args": [
                "fantomas",
                "${staged}"
            ],
            "include": [
                "**/*.fs",
                "**/*.fsx",
                "**/*.fsi"
            ]
        },
        {
            "name": "lint-markdown-staged-files",
            "group": "pre-commit-operations",
            "command": "npx",
            "args": [
                "markdownlint-cli",
                "${staged}"
            ],
            "include": [
                "**/CHANGELOG.md"
            ]
        }
    ]
}
